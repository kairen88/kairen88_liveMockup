package zz.csg;

import java.awt.Insets;

/**
 * A clone of AWT's {@link Insets} but with doubles
 * @author gpothier
 */
public class ZInsets
{
	public static final ZInsets EMPTY = new ZInsets(0, 0, 0, 0);
	
	public double top;
	public double left;
	public double bottom;
	public double right;
	
	public ZInsets(double aTop, double aLeft, double aBottom, double aRight)
	{
		top = aTop;
		left = aLeft;
		bottom = aBottom;
		right = aRight;
	}
	
	
}
