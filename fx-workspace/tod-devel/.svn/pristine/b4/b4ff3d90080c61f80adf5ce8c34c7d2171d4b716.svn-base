package net.basekit.models.table;

import net.basekit.models.WidgetModel;

/**
 * Base interface for table-like models. Provides a method to get the set of columns.
 * @author gpothier
 */
public interface TabularWidgetModel extends WidgetModel
{
	/**
	 * Returns the numbder of columns in the table.
	 */
	public int getColumnCount ();
	
	/**
	 * Returns the column at the specified index.
	 */
	public TableColumnWidgetModel getColumn (int aIndex);
}