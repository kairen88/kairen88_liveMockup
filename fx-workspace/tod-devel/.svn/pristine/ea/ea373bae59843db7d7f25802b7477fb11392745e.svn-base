package net.basekit.shapes;
import javax.vecmath.Vector3f;

/**
 * A shape that can be positioned and size at any moment.
 * @author gpothier
 */
public interface Shape
{
	public abstract Vector3f getSize ();
	public abstract void setSize (Vector3f aSize);

	public abstract Vector3f getPosition ();
	public abstract void setPosition (Vector3f aPosition);
}