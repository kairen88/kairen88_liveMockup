<?xml version="1.0" encoding="UTF-8"?>
<binding>
	<mapping name="list" class="zz.snipsnap.utils.jibx.JiBXListWrapper">
		<collection field="itsList" type="java.util.ArrayList"/>
	</mapping>


	<mapping name="attachment" class="zz.snipsnap.client.core.AttachmentDescriptor">
		<value name="name" field="itsName"/>
		<value name="content-type" field="itsContentType"/>
		<value name="size" field="itsSize"/>
		<structure field="itsModificationDate">
			<value name="date" set-method="setTime" get-method="getTime"/>
		</structure>
		<value name="location" field="itsLocation"/>
	</mapping>
	
	<mapping name="media-info" class="zz.snipsnap.plugin.media.MediaInfo">
		<value style="attribute" name="name" field="itsName"/>
		<value style="attribute" name="size" field="itsSize"/>
		
		<value usage="optional" name="duration" field="itsDuration"/>
		<value usage="optional" name="date" field="itsDate"/>
		
		<structure usage="optional" name="resolution" field="itsResolution">
			<value style="attribute" name="width" field="width"/>
			<value style="attribute" name="height" field="height"/>
		</structure>
		
	</mapping>
	
</binding>
